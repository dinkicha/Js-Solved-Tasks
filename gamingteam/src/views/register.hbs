<main id="register">

  <div class="register-box">
    <h1>Register</h1>
    <h4>It's free and only takes a minute</h4>
    <form method="post">
      <label>Username</label>
      <input type="text" name="username" placeholder="Username.." value="{{body.username}}"/>
      <label>Email</label>
      <input type="text" name="email" placeholder="Email.." value="{{body.email}}"/>
      <label>Password</label>
      <input type="password" name="password" placeholder="Password.." />
      <label>Confirm Password</label>
      <input type="password" name="repass" placeholder="Confirm Password.." />
      <input type="submit" value="Register" />
    </form>
    <p>Already have an account? <a href="/auth/register">Login here</a></p>
  </div>
</main>