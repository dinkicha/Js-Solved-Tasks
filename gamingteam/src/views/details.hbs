<main id="details">
  {{#with game}}
    <section id="details-info">
      <div class="game-image">
        <img src="{{image}}" />
      </div>

      <div class="game-info">
        <div class="game-text">
          <h1 id="name">{{name}}</h1>
          <h3 id="platform">Platform: {{platform}}</h3>
          <p id="price"><span>Price: ${{price}}</span></p>
          <p id="genre"><span>Genre: {{genre}}</span></p>
          <p id="description">{{description}}</p>
        </div>
        {{#if isUser}}
          <div class="product-btn">
            {{#if isAuthor}}
              <div class="author">
                <a href="/games/{{_id}}/edit" class="btn-edit">Edit</a>
                <a href="/games/{{_id}}/delete" class="btn-delete">Delete</a>
              </div>
            {{else}}
              {{#if canBuy}}
                <a href="/games/{{_id}}/buy" class="btn-buy">Buy</a>
              {{else}}
                <p class="buy-message">You have already bought this game</p>
              {{/if}}
            {{/if}}
          </div>
        {{/if}}
      </div>
    </section>
  {{/with}}
</main>