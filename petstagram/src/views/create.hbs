<main>
  <!-- Start Add Photo Section -->
  <div class="createPage">
    <h2>Add photo</h2>
    <!-- Start Add Photo Form -->
    <form method="post">
      <p>
        <input type="text" name="name" placeholder="Name" value="{{body.name}}"/>
      </p>

      <p>
        <input type="number" name="age" placeholder="Age" value="{{body.age}}"/>
      </p>

      <p>
        <textarea type="text" name="description" placeholder="Description">{{body.description}}</textarea>
      </p>

      <p>
        <input type="text" name="location" placeholder="Location" value="{{body.location}}"/>
      </p>

      <p>
        <input type="text" name="image" placeholder="Link to image" value="{{body.image}}"/>
      </p>
      <!-- Add Photo Button -->
      <button class="add-btn" type="submit">Add Photo</button>
    </form>
  </div>
</main>
